{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
<div class="p-5">
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Genre</th>
                <th>Image</th>
                <th>Taille</th>
                <th>Couleur</th>
                <th>Stock</th>
                <th>EnregistrementAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.titre }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.genre }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.taille }}</td>
                <td>
                <div style="background-color:{{ produit.color  }}; width:40px; height:40px"></div>
                
                </td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.enregistrementAt ? produit.enregistrementAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_produit_new') }}">Create new</a>
    </div>
{% endblock %}
