{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
<div class="container">

    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ produit.genre }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% if produit.image %}
							<img src="{{asset('images/' ~ produit.image)}}" height="200" alt="">
						{% else %}
							<img src="{{ asset('images/imageDefault.jpg') }}" height="200" alt="">
						{% endif %}
                </td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ produit.taille }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>EnregistrementAt</th>
                <td>{{ produit.enregistrementAt ? produit.enregistrementAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_produit_index') }}">back to list</a>

    <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('admin_produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
